@model Walmart.Model.Estado

@{
    ViewBag.Title = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Novo", "Estados", FormMethod.Post, new { @class = "pure-form pure-form-stacked pure-skin-mine" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Estado</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pais)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Pais)
            @Html.ValidationMessageFor(model => model.Pais)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sigla)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sigla)
            @Html.ValidationMessageFor(model => model.Sigla)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Regiao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Regiao)
            @Html.ValidationMessageFor(model => model.Regiao)
        </div>

        <p>
            <input type="submit" value="Salvar" class="pure-button notice"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
