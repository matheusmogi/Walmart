@model Walmart.Model.Cidade
@{
    ViewBag.Title = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script src="/Scripts/bootbox/bootbox3.2.0.js" type="text/javascript"></script>
    <script src="/Scripts/bootbox/bootstrap.min.js" type="text/javascript"></script>
    <link href="/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    
}
@{
if (ViewBag.Erro != null)
    {
        <script type="text/javascript" language="javascript">
            bootbox.alert("Algo inesperado aconteceu :(");
        </script>   
    }
}
<h2>
    Novo</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Novo", "Cidades", FormMethod.Post, new { @class = "pure-form pure-form-stacked pure-skin-mine" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Cidade</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Estado)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CodEstado, new SelectList(ViewBag.Estados, "Codigo", "Nome"), "Escolha")
            @Html.ValidationMessageFor(model => model.CodEstado)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Capital)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capital)
            @Html.ValidationMessageFor(model => model.Capital)
        </div>
        <p>
            <input type="submit" value="Salvar" class="pure-button notice" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Voltar", "Index")
</div>
